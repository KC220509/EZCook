<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".p_share_recipe">

    <LinearLayout
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lineartab"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#009688"
            android:gravity="center">

            <Button
                android:id="@+id/btn_backpost"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/f_back_white"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/buttom_Post"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:text="Đăng bài"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#fff"
                android:background="@drawable/p_edit_background_bt_luu"
                app:backgroundTint="@null" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/lineartab">

            <LinearLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/f_ic_camera"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:text="Hình ảnh món ăn"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewTenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardviewAnh"
            tools:ignore="InvalidId">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Tên món:"
                        android:textSize="60px"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="45dp"
                        android:hint="Thịt kho tàu"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="40px"
                        android:inputType="text"
                        android:textColorHint="#9C000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Khẩu phần :"
                        android:textSize="40px"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="45dp"
                        android:hint="2 người"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="40px"
                        android:textAlignment="textStart"
                        android:inputType="text"
                        android:textColorHint="#9C000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Thời gian nấu:"
                        android:textSize="40px"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:hint="30 phút"
                        android:layout_marginEnd="45dp"
                        android:inputType="text"
                        android:textAlignment="textStart"
                        android:textColorHint="#9C000000"
                        android:textSize="40px" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Độ khó:"
                        android:textColor="#000000"
                        android:textSize="40px" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="61dp"
                        android:hint="dễ"
                        android:layout_marginEnd="45dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="40px"
                        android:inputType="text"
                        android:textColorHint="#9C000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Calo:"
                        android:textColor="#000000"
                        android:textSize="40px" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:hint="130 calo"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="40px"
                        android:layout_marginEnd="45dp"
                        android:inputType="text"
                        android:textColorHint="#9C000000"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewNguyenLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardviewTenMon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Nguyên liệu:"
                    android:textSize="60px"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="#000000"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:hint="2kg thịt heo"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="40px"
                    android:inputType="text"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:hint="2ml nước"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="40px"
                    android:inputType="text"
                    android:textColorHint="#9C000000"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/h_bottom_post1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm nguyên liệu"
                        android:fontFamily="@font/quicksand_bold"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewBuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardviewNguyenLieu"
            tools:ignore="InvalidId">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Cách làm"
                    android:textSize="60px"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="#000000"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="1."
                        android:textSize="40px"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:hint="Rửa qua thịt với nước nóng"
                        android:inputType="text"
                        android:textColorHint="#9C000000"
                        android:textSize="40px" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:background="#808080"
                    app:cardElevation="8dp"
                    android:layout_marginStart="35dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/f_ic_camera"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="2."
                        android:textSize="40px"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:hint="cắt khúc"
                        android:inputType="text"
                        android:textColorHint="#9C000000"
                        android:textSize="40px" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:background="#808080"
                    android:layout_marginStart="35dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/f_ic_camera"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/h_bottom_post1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm bước"
                        android:fontFamily="@font/quicksand_bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>