<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_food"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="18dp"
    tools:context=".h_SearchActivity">
    <LinearLayout
        android:id="@+id/linear_evaluate"
        android:layout_width="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_height="25dp"
        android:elevation="3dp"
        android:gravity="center_horizontal|center"
        android:background="@drawable/h_background_evaluate"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:alpha="0.8"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_star"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/h_ic_star_half"/>

        <TextView
            android:id="@+id/title_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="4.5"
            android:textSize="35px"
            android:textStyle="bold"
            android:textColor="#005950"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_category_save_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_food_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/thanh_pham"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_category_food"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/h_edit_background_suggest"
        android:elevation="2dp"
        app:cardBackgroundColor="#fff"
        android:layout_gravity="bottom"
        android:alpha="0.9"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cardview_category_suggest_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/category_food_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thịt kho tàu"
                android:textSize="30px"
                android:textStyle="bold"
                android:textColor="#005950"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/h_ic_clock"/>
                <TextView
                    android:id="@+id/category_food_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="15 phút"
                    android:textSize="20px"
                    android:textColor="#005950"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/h_ic_fire"/>
                <TextView
                    android:id="@+id/category_food_kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="290 kcal"
                    android:textSize="20px"
                    android:textColor="#005950"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_image_save"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/h_ic_save"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="right"
                android:contentDescription="image_bt_Save"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:layout_gravity="right">
                <ImageView
                    android:id="@+id/level_image"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_margin="1dp"
                    android:src="@drawable/h_ic_difficult"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>