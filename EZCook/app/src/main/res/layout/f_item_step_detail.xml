<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    android:background="@drawable/f_post_ct"
    android:orientation="vertical">
    <TextView
        android:id="@+id/f_step_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bước 1:"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/f_make_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuẩn bị 1 chiếc nồi sạch đổ : 250ml sữa tươi, 250ml sữa đặc, 400ml nước cốt dừa ( 1 lon ) quậy đều tay để các nguyên liệu được hòa với nhau."
        android:textColor="@color/black"
        android:textSize="14sp"/>

</LinearLayout>