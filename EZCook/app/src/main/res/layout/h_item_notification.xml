<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#54D1D6D4"

    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageNotification"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/h_logo_app"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ezcook"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/ContentNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test notification"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/TimeNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15/12/2023"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_notification"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
