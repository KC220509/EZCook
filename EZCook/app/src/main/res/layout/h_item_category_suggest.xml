<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_suggest"
    android:layout_width="165dp"
    android:layout_height="115dp"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="18dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_category_save_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_suggest_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/cat_1"
            android:contentDescription="image_bt_seedetails"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linear_category_suggest"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/h_edit_background_suggest"
        android:elevation="2dp"
        app:cardBackgroundColor="#fff"
        android:layout_gravity="bottom"
        android:alpha="0.9"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cardview_category_suggest_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="15dp"
            android:paddingTop="4dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/category_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thịt kho tàu"
                android:textColor="#005950"
                android:textSize="11sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/h_ic_clock"/>
                <TextView
                    android:id="@+id/category_suggest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="15 phút"
                    android:textSize="20px"
                    android:textColor="#005950"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/h_ic_fire"/>
                <TextView
                    android:id="@+id/category_suggest_kcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="290 kcal"
                    android:textSize="20px"
                    android:textColor="#005950"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingEnd="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_save_suggest"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/h_ic_save"
                android:background="@android:color/transparent"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="right"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <ImageView
                    android:id="@+id/category_suggest_picLevel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/h_ic_difficult"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>