<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="18dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_category_foodnew_pic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/category_foodnew_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/fast_2"
            android:contentDescription="image_bt_seedetails"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linear_category_foodnew"
        android:layout_width="match_parent"
        android:layout_marginTop="105dp"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/category_foodnew_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thịt kho tàu"
                android:textSize="35px"
                android:textStyle="bold"
                android:textColor="#01442D"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/h_ic_clock"/>
                <TextView
                    android:id="@+id/category_foodnew_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="15 phút"
                    android:textSize="20px"
                    android:textColor="#005950"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/h_ic_fire"/>
                <TextView
                    android:id="@+id/category_foodnew_kcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="290 kcal"
                    android:textSize="20px"
                    android:textColor="#005950"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="155dp"
            android:background="#ccc"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:id="@+id/linear_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_category_pic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"

            android:padding="5dp"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/category_foodnew_user_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/cat_1"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/category_foodnew_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="Bùi Đức Công"
            android:textColor="#3B6E69"
            android:textSize="35px" />
    </LinearLayout>

</androidx.cardview.widget.CardView>