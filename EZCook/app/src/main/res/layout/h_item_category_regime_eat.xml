<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_margin="8dp"
    android:elevation="5dp"
    app:cardBackgroundColor="#40000000"
    android:background="@drawable/h_edit_background_category">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_category_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/category_regime_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cat_1"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/category_regime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Ăn sáng"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#5F5F5F"
        app:layout_constraintTop_toBottomOf="@+id/cardview_category_pic"/>
</androidx.constraintlayout.widget.ConstraintLayout>